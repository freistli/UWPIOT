  <CommandSet xml:lang="en-us" Name="Swith_en-us">
    <AppName> Peter </AppName>
    <Example> Ask Peter to turn on the light </Example>

    <Command Name="switch">
      <Example> Ask Peter to turn on the light </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> {status} the light</ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> Ask {builtin:AppName} to {status} the light</ListenFor>
      
      <Feedback> {status} the light </Feedback>
      <Navigate Target="placeholder"/>
    </Command>

    <PhraseList Label="status">
      <Item>turn on</Item>
      <Item>turn off</Item>
    </PhraseList>
  </CommandSet>
</VoiceCommands>